<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Lỡ bấm vô rồi thì quét luôn đi ạ !!!"
        android:background="@drawable/ct_round_border"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/myQrCode"
        app:layout_constraintRight_toRightOf="@id/myQrCode"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/myQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtQrCode"
        app:srcCompat="@drawable/my_qr_code" />


</androidx.constraintlayout.widget.ConstraintLayout>