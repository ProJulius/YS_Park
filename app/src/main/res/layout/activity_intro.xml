<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4580C2">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/logo_pro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635" />

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:fontFamily="@font/abril_fatface_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgLogo"
        app:layout_constraintLeft_toLeftOf="@+id/imgLogo"
        app:layout_constraintRight_toRightOf="@+id/imgLogo" />

    <TextView
        android:id="@+id/txtDeveloped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Developed by Trung"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imgLogo"
        app:layout_constraintRight_toRightOf="@+id/imgLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>